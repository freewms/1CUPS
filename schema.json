{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://example.com/object1635258134.json",
    "title": "Root",
    "type": "object",
    "default": {},
    "required": [
        "command"
    ],
    "properties": {
        "command": {
            "$id": "#root/items/command",
            "title": "Command",
            "type": "string",
            "enum": [
                "printers_info",
                "print_jobs",
                "printers_stop",
                "printers_start",
                "queues_info",
                "clear_queues"                
            ],
            "default": "",
            "examples": [
                "printers_info"
            ],
            "pattern": "^.*$"
        }
    },
    "if": {
        "properties": {
            "command": {
                "enum": [
                    "printers_stop",
                    "printers_start",
                    "queues_info",
                    "clear_queues" 
                ]
            }
        }
    },
    "then": {
        "properties": {
            "printers": {
                "$id": "#root/items/printers",
                "title": "Printers",
                "type": "array",
                "default": [],
                "items": {
                    "$id": "#root/items/printers/items",
                    "title": "Items",
                    "type": "string",
                    "minLength": 1,
                    "default": "",
                    "examples": [
                        "printer_1",
                        "printer_2"
                    ],
                    "pattern": "^.*$"
                }
            }
        },
        "required": [
            "printers"
        ]
    },
    "if": {
        "properties": {
            "command": {
                "enum": [
                    "print_jobs"
                ]
            }
        }
    },
    "then": {
        "properties": {
            "jobs": {
                "$id": "#root/jobs", 
                "title": "Jobs", 
                "type": "array",
                "default": [],
                "minItems": 1,
                "uniqueItems": true,
                "items":{
                    "$id": "#root/jobs/items", 
                    "title": "Items", 
                    "type": "object",
                    "required": [
                        "printer",
                        "doc",
                        "name"
                    ],
                    "properties": {
                        "printer": {
                            "$id": "#root/jobs/items/printer", 
                            "title": "Printer", 
                            "type": "string",
                            "default": "",
                            "minLength": 1,
                            "examples": [
                                "printer"
                            ],
                            "pattern": "^.*$"
                        },
                        "doc": {
                            "$id": "#root/jobs/items/doc", 
                            "title": "Doc", 
                            "type": "string",
                            "default": "",
                            "minLength": 1,
                            "examples": [
                                "Doc"
                            ],
                            "pattern": "^.*$"
                        },
                        "name": {
                            "$id": "#root/jobs/items/name", 
                            "title": "Name", 
                            "type": "string",
                            "default": "",
                            "minLength": 1,
                            "examples": [
                                "Name"
                            ],
                            "pattern": "^.*$"
                        }
                    }
                }
            }
        },
        "required": [
            "jobs"
        ]
    }
}